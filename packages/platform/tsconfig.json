{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../config/src/typescript/tsconfig.frontend.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "types": ["@testing-library/jest-dom", "bun-types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"]
    },
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "drizzle.config.ts",
    "cypress.config.ts",
    "**/__tests__/**/*",
    "**/tests/**/*"
  ]
}
