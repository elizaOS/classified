# ELIZA Game Container Environment Configuration
# Copy this to .env and customize for your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=eliza_secure_pass_change_me
POSTGRES_PORT=5432
PGADMIN_PASSWORD=admin_pass_change_me
PGADMIN_PORT=8080

# =============================================================================
# DATA PERSISTENCE - WHERE YOUR AGENT'S DATA IS STORED
# =============================================================================
# Main data directory - agent memories, database, logs will be stored here
# This survives container restarts and updates
DATA_DIR=$HOME/.eliza/data

# Knowledge directory - mount your custom knowledge files here
KNOWLEDGE_DIR=./knowledge

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
AGENT_PORT=7777

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# Choose your AI provider: openai, anthropic, ollama
MODEL_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
LANGUAGE_MODEL=gpt-4o-mini
TEXT_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# LANGUAGE_MODEL=claude-3-haiku-20240307

# Ollama Configuration (for local AI)
OLLAMA_SERVER_URL=http://host.docker.internal:11434
# LANGUAGE_MODEL=llama3.2:3b
# TEXT_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# AGENT BEHAVIOR CONFIGURATION
# =============================================================================
# Enable autonomous thinking and goal-setting
AUTONOMY_ENABLED=true
AUTONOMY_AUTO_START=true

# Knowledge and learning
LOAD_DOCS_ON_STARTUP=true
CTX_KNOWLEDGE_ENABLED=true

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_change_me_to_something_random

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Set to true to start with fresh data (WARNING: deletes existing memories)
CLEAN_START=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Node environment
NODE_ENV=production