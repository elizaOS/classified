# ELIZA Game Environment Configuration
# Note: Container ports and networking are managed by the Tauri app

# AI Provider Configuration (Required - Choose one)

# OpenAI (Recommended)
OPENAI_API_KEY=your_openai_api_key_here

# OR Anthropic  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Options
USE_SMALL_MODELS=true
AUTO_SEND_TEST_MESSAGE=true

# Model Configuration (Optional - app manages defaults)
MODEL_PROVIDER=openai
LANGUAGE_MODEL=gpt-4o-mini
TEXT_EMBEDDING_MODEL=text-embedding-3-small

# Plugin Configuration (Optional - app manages defaults)
AUTONOMY_ENABLED=true
LOAD_DOCS_ON_STARTUP=true
CTX_KNOWLEDGE_ENABLED=true