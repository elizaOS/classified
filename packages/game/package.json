{
  "name": "@elizaos/game",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Autonomous coding game where AI agents self-improve through code generation",
  "scripts": {
    "dev": "cd ../agentserver && bun run build && cd ../game && concurrently \"vite dev\" \"cd src-tauri && USE_SMALL_MODELS=true cargo tauri dev\"",
    "start": "cd ../agentserver && bun run build && cd ../game && concurrently \"vite\" \"cd src-tauri && USE_SMALL_MODELS=true cargo tauri dev\"",
    "build": "cd ../agentserver && bun run build && cd ../game && vite build && cd src-tauri && cargo tauri build",
    "clean": "cd ../agentserver && bun run clean",
    "test:open": "cypress open",
    "test": "./run-all-tests.sh",
    "test:e2e": "./run-all-tests.sh e2e",
    "test:tauri": "./run-all-tests.sh tauri",
    "test:quick": "echo 'No unit tests for game package'",
    "test:bash": "./scripts/run-e2e-tests.sh",
    "test:cypress": "cypress run --spec 'cypress/e2e/**/*.cy.ts' --reporter spec",
    "test:setup": "cypress run --spec 'cypress/e2e/01-setup-and-configuration.cy.ts'",
    "test:api": "cypress run --spec 'cypress/e2e/02-backend-api.cy.ts'",
    "test:capabilities": "cypress run --spec 'cypress/e2e/03-capabilities.cy.ts'",
    "test:knowledge": "cypress run --spec 'cypress/e2e/04-knowledge-management.cy.ts'",
    "test:messaging": "cypress run --spec 'cypress/e2e/05-messaging-and-websocket.cy.ts'",
    "test:ui": "cypress run --spec 'cypress/e2e/06-ui-navigation.cy.ts'",
    "test:integration": "cypress run --spec 'cypress/e2e/07-full-integration.cy.ts'",
    "test:core": "cypress run --spec 'cypress/e2e/0[1-7]-*.cy.ts'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "eslint . --fix && prettier --write ."
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@tanstack/react-query": "^5.62.10",
    "@tanstack/react-query-devtools": "^5.62.8",
    "@tauri-apps/api": "2.1.1",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "ace-builds": "^1.38.0",
    "framer-motion": "^11.13.1",
    "react": "^18.3.1",
    "react-ace": "^7.0.5",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.0.2",
    "react-syntax-highlighter": "^15.6.1",
    "vite": "^6.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@tauri-apps/cli": "2.1.0",
    "@types/node": "^22.10.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cypress": "^13.17.0",
    "eslint": "^9.17.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sass": "^1.83.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
